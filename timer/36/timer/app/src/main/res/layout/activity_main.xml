<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android_com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- 프래그먼트 컨테이너 -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:background="#1F2937" />

    <!-- 하단 버튼 영역 (스톱워치/타이머) -->
    <LinearLayout
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_spacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="?attr/colorSurfaceContainer">


        <!-- 알림 탭: 텍스트 + 선택 인디케이터 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAlarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="알림"
                style="@style/Widget.Material3.Button.TextButton"
                android:textColor="@color/gray_500"
                app:iconTint="@color/gray_500"/>

            <View
                android:id="@+id/indicatorAlarm"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/orange_500"
                android:visibility="invisible" />
        </LinearLayout>

        <!-- 스톱워치 탭: 텍스트 + 선택 인디케이터 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStopwatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="스톱워치"
                style="@style/Widget.Material3.Button.TextButton"
                android:textColor="@color/gray_500"
                app:iconTint="@color/gray_500"/>

            <View
                android:id="@+id/indicatorStopwatch"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/orange_500"
                android:visibility="invisible" />
        </LinearLayout>

        <!-- 타이머 탭: 텍스트 + 선택 인디케이터 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="타이머"
                style="@style/Widget.Material3.Button.TextButton"
                android:textColor="@color/gray_500"
                app:iconTint="@color/gray_500"/>

            <View
                android:id="@+id/indicatorTimer"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/orange_500"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <!-- 네비게이션바 공백 부분 (새로 추가) -->
    <View
        android:id="@+id/bottom_nav_spacer"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="#304634"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
