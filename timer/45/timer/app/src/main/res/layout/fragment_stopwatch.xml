<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/timer_bg"
    android:padding="16dp"
    tools:context=".StopWatchFragment">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupClassicStopwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="stopwatchText,buttonLayout,lapListView" />

    <TextView
        android:id="@+id/stopwatchText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="00:00:00.0000"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:fontFamily="monospace"
        android:layerType="software"
        android:shadowColor="#99000000"
        android:shadowDx="0"
        android:shadowDy="6"
        android:shadowRadius="6"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stopwatchText">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLapReset"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="랩/초기화"
            android:textSize="14sp"
            android:padding="0dp"
            android:enabled="false"
            app:cornerRadius="32dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="@android:color/black"
            android:backgroundTint="#CCCCCC" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartStop"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="시작"
            android:textSize="14sp"
            android:padding="0dp"
            app:cornerRadius="32dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:backgroundTint="#6200EE"
            android:textColor="@android:color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSwitchStopwatch"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="전환"
            android:textSize="14sp"
            android:padding="0dp"
            app:cornerRadius="32dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="@android:color/black"
            android:backgroundTint="#FFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnKeepScreenClassic"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="유지"
            android:textSize="14sp"
            android:padding="0dp"
            app:cornerRadius="32dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="@android:color/black"
            android:backgroundTint="#FFFFFF" />

    </LinearLayout>

    <ListView
        android:id="@+id/lapListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        app:layout_constraintTop_toBottomOf="@id/buttonLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@android:layout/simple_list_item_1" />

    <FrameLayout
        android:id="@+id/secondStopwatchContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>