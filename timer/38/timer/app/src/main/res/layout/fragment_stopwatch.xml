<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/timer_bg"
    android:padding="16dp"
    tools:context=".StopWatchFragment">

    <TextView
        android:id="@+id/stopwatchText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="00:00:00.0000"
        android:textColor="@android:color/black"
        android:textSize="36sp"  android:fontFamily="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stopwatchText">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLapReset"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginEnd="16dp"
            android:text="랩 / 초기화"
            android:textSize="20sp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:enabled="false"
            app:cornerRadius="32dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="@android:color/black"
            android:backgroundTint="#CCCCCC" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartStop"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:text="시작"
            android:textSize="20sp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            app:cornerRadius="32dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:backgroundTint="#6200EE"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <ListView
        android:id="@+id/lapListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        app:layout_constraintTop_toBottomOf="@id/buttonLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@android:layout/simple_list_item_1" />

</androidx.constraintlayout.widget.ConstraintLayout>