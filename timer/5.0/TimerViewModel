package com.krdonon.timer

import androidx.lifecycle.ViewModel

/** 보조 타이머를 복원하기 위한 순수 데이터(상태) */
data class BlockTimerState(
    var label: String = "타이머",
    var timeLeft: Long = 0L,
    var running: Boolean = false
)

class TimerViewModel : ViewModel() {
    /** 프래그먼트가 파괴/재생성되어도 유지될 보조 타이머 상태들 */
    val blocks = mutableListOf<BlockTimerState>()
}
