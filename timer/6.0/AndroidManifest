<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.krdonon.timer">

    <!-- 권한들 (그대로 유지) -->
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".TimerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Timer">

        <!-- ✅ 앱 진입점: singleTop 으로 재사용 (초기화 방지) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop">
            <!-- 런처 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- ✅ 알림에서 보내는 액션 (선택 사항이지만 넣어두면 안전) -->
            <intent-filter>
                <action android:name="com.krdonon.timer.action.OPEN_TIMER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 알람 전체 화면 -->
        <activity
            android:name="com.krdonon.timer.alarm.AlarmActivity"
            android:exported="true"
            android:theme="@style/Theme.Timer"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:allowEmbedded="true" />

        <!-- 알람 리시버 -->
        <receiver
            android:name="com.krdonon.timer.alarm.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />

        <!-- 알람 서비스 -->
        <service
            android:name="com.krdonon.timer.alarm.AlarmService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

        <!-- 타이머/스톱워치 알림 서비스 -->
        <service
            android:name=".ClockService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />
    </application>
</manifest>
