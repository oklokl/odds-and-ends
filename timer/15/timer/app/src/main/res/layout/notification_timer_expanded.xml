<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:padding="12dp"
    android:gravity="center_vertical" android:minHeight="88dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"> <TextView
        android:id="@+id/title_big"
        android:text="@string/label_timer"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <Chronometer
            android:id="@+id/chronometer_big"
            android:format="%s"
            android:textSize="36sp"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_toggle_big"
            android:text="@string/btn_pause"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:gravity="center"
            android:minHeight="40dp"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/btn_stop_big"
            android:text="@string/btn_stop"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:gravity="center"
            android:minHeight="40dp"
            android:minWidth="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>