<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:clipToPadding="false"
    tools:theme="@style/Theme.Timer"
    tools:context=".alarmclock.AlarmEditActivity">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvTimeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alarm_time"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner" />

        <TextView
            android:id="@+id/tvNowDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_alarm_block"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:text="@string/alarm_now_datetime_placeholder"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            tools:text="2026년 1월 5일 오후 1:13:45" />

        <LinearLayout
            android:id="@+id/rowDaysTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvDaysTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/alarm_days"
                android:textStyle="bold"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCalendar"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alarm_calendar"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEveryWeek"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alarm_every_week"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:minHeight="48dp"
                android:minWidth="48dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/dayGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="false"
            app:selectionRequired="false">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/daySun"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/day_sun"
                android:minWidth="48dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:ellipsize="none"
                android:maxLines="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dayMon"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/day_mon"
                android:minWidth="48dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:ellipsize="none"
                android:maxLines="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dayTue"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/day_tue"
                android:minWidth="48dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:ellipsize="none"
                android:maxLines="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dayWed"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/day_wed"
                android:minWidth="48dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:ellipsize="none"
                android:maxLines="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dayThu"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/day_thu"
                android:minWidth="48dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:ellipsize="none"
                android:maxLines="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dayFri"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/day_fri"
                android:minWidth="48dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:ellipsize="none"
                android:maxLines="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/daySat"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/day_sat"
                android:minWidth="48dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:ellipsize="none"
                android:maxLines="1" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <TextView
            android:id="@+id/tvLabelTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alarm_name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/etLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxWidth="480dp"
            android:minHeight="48dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:hint="@string/alarm_name_hint"
            android:inputType="text"
            android:autofillHints="name"
            android:importantForAutofill="yes" />

        <LinearLayout
            android:id="@+id/rowSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingBottom="8dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/tvSound"
                android:labelFor="@id/swSound"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/alarm_sound" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/swSound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rowVibrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <TextView
                android:id="@+id/tvVibrate"
                android:labelFor="@id/swVibrate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/alarm_vibrate" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/swVibrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvSnoozeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alarm_snooze"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <RadioGroup
                android:id="@+id/rgSnoozeMinutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/snooze5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/snooze_5m" />

                <RadioButton
                    android:id="@+id/snooze10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/snooze_10m"
                    android:layout_marginStart="12dp" />

                <RadioButton
                    android:id="@+id/snooze15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/snooze_15m"
                    android:layout_marginStart="12dp" />

                <RadioButton
                    android:id="@+id/snooze20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/snooze_20m"
                    android:layout_marginStart="12dp" />

                <RadioButton
                    android:id="@+id/snooze30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/snooze_30m"
                    android:layout_marginStart="12dp" />

                <RadioButton
                    android:id="@+id/snoozeCustom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/snooze_custom"
                    android:layout_marginStart="12dp" />
            </RadioGroup>
        </HorizontalScrollView>

        <RadioGroup
            android:id="@+id/rgSnoozeCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/snoozeCount3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/snooze_3x" />

            <RadioButton
                android:id="@+id/snoozeCount5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/snooze_5x"
                android:layout_marginStart="12dp" />

            <RadioButton
                android:id="@+id/snoozeCountForever"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/snooze_forever"
                android:layout_marginStart="12dp" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/rowEnabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingBottom="8dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/tvEnabled"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/alarm_enabled" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/swEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/rowChangeSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <TextView
                android:id="@+id/tvChangeSound"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/alarm_change_sound" />

            <ImageButton
                android:id="@+id/btnPickSound"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/alarm_change_sound"
                android:src="@drawable/ic_folder"
                android:tint="?attr/colorPrimary" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvSelectedSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="@string/alarm_sound_current_default"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />


        <LinearLayout
            android:id="@+id/bottomButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alarm_cancel" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alarm_save"
                android:layout_marginStart="12dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
