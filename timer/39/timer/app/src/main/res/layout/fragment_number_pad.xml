<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/timer_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- 내일 / 오전 토글 : 48dp 이상 + borderless -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/btnTomorrow"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="110dp"
                android:minHeight="48dp"
                android:paddingHorizontal="12dp"
                android:text="@string/label_tomorrow" />

            <Button
                android:id="@+id/btnAmPm"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="110dp"
                android:minHeight="48dp"
                android:paddingHorizontal="12dp"
                android:text="@string/label_am"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- 블록 라벨 (선택용) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/lblH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_hour"
                android:textSize="14sp"
                android:layout_marginEnd="42dp" />

            <TextView
                android:id="@+id/lblM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_minute"
                android:textSize="14sp"
                android:layout_marginEnd="42dp" />

            <TextView
                android:id="@+id/lblS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_second"
                android:textSize="14sp"
                android:layout_marginEnd="42dp" />

            <TextView
                android:id="@+id/lblMS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_thousandth"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 큰 미리보기 -->
        <TextView
            android:id="@+id/inputTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_hhmmss_mmmm"
            android:textSize="48sp"
            android:fontFamily="monospace"
            android:textColor="#424242"
            android:layout_marginTop="6dp" />

        <!-- 숫자 키패드 (원형) -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="4"
            android:useDefaultMargins="true"
            android:layout_marginTop="20dp">

            <Button android:id="@+id/btn1" android:layout_width="110dp" android:layout_height="110dp" android:text="@string/digit_1" android:background="@drawable/circle_button"/>
            <Button android:id="@+id/btn2" android:layout_width="110dp" android:layout_height="110dp" android:text="@string/digit_2" android:background="@drawable/circle_button"/>
            <Button android:id="@+id/btn3" android:layout_width="110dp" android:layout_height="110dp" android:text="@string/digit_3" android:background="@drawable/circle_button"/>

            <Button android:id="@+id/btn4" android:layout_width="110dp" android:layout_height="110dp" android:text="@string/digit_4" android:background="@drawable/circle_button"/>
            <Button android:id="@+id/btn5" android:layout_width="110dp" android:layout_height="110dp" android:text="@string/digit_5" android:background="@drawable/circle_button"/>
            <Button android:id="@+id/btn6" android:layout_width="110dp" android:layout_height="110dp" android:text="@string/digit_6" android:background="@drawable/circle_button"/>

            <Button android:id="@+id/btn7" android:layout_width="110dp" android:layout_height="110dp" android:text="@string/digit_7" android:background="@drawable/circle_button"/>
            <Button android:id="@+id/btn8" android:layout_width="110dp" android:layout_height="110dp" android:text="@string/digit_8" android:background="@drawable/circle_button"/>
            <Button android:id="@+id/btn9" android:layout_width="110dp" android:layout_height="110dp" android:text="@string/digit_9" android:background="@drawable/circle_button"/>

            <Button android:id="@+id/btnDelete" android:layout_width="110dp" android:layout_height="110dp" android:text="@string/arrow_back" android:background="@drawable/circle_button"/>
            <Button android:id="@+id/btn0" android:layout_width="110dp" android:layout_height="110dp" android:text="@string/digit_0" android:background="@drawable/circle_button"/>
            <Button android:id="@+id/btnNext" android:layout_width="110dp" android:layout_height="110dp" android:text="@string/btn_next" android:background="@drawable/circle_button"/>
        </GridLayout>

    </LinearLayout>
</ScrollView>
