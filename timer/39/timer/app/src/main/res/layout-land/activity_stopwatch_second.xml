<?xml version="1.0" encoding="utf-8"?>
<com.krdonon.timer.widget.QuarterTurnLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/timer_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/timer_bg"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineTimeTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineTimeBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.65" />

        <TextView
            android:id="@+id/secondStopwatchText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="000:00:00.000"
            android:textColor="@android:color/black"
            android:fontFamily="monospace"

            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="80sp"
            android:autoSizeStepGranularity="1sp"

            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"

            app:layout_constraintTop_toTopOf="@id/guidelineTimeTop"
            app:layout_constraintBottom_toTopOf="@id/guidelineTimeBottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/secondButtonRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSecondReset"
                style="@style/Timer.SecondStopwatchSecondaryButton"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:text="초기화"
                android:enabled="false"
                android:layout_marginEnd="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSecondStartStop"
                style="@style/Timer.SecondStopwatchPrimaryButton"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:text="시작"
                android:layout_marginEnd="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSecondSwitch"
                style="@style/Timer.SecondStopwatchSecondaryButton"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:text="전환"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.krdonon.timer.widget.QuarterTurnLayout>