<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#bdecb6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_hour"
                android:textSize="14sp"
                android:layout_marginEnd="42dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_minute"
                android:textSize="14sp"
                android:layout_marginEnd="42dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_second"
                android:textSize="14sp"
                android:layout_marginEnd="42dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_thousandth"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_hhmmss_mmmm"
            android:textSize="41sp"
            android:fontFamily="monospace"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/currentTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 시간 00:00:00:0000 오전"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginTop="14dp" />

        <TextView
            android:id="@+id/nextTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next_time_prefix"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginTop="14dp"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="48dp"
            android:minWidth="240dp" />

        <!-- ✅ 최종 해결: 버튼 크기 증가, 텍스트 크기 감소 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="22dp">

            <Button
                android:id="@+id/btnPreset10"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:text="00:10:00"
                android:textSize="10sp"
                android:background="@drawable/circle_button"
                android:textColor="@android:color/white"
                android:includeFontPadding="false"
                android:padding="2dp" />

            <Button
                android:id="@+id/btnPreset15"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:text="00:15:00"
                android:textSize="10sp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_button"
                android:textColor="@android:color/white"
                android:includeFontPadding="false"
                android:padding="2dp" />

            <Button
                android:id="@+id/btnPreset30"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:text="00:30:00"
                android:textSize="10sp"
                android:background="@drawable/circle_button"
                android:textColor="@android:color/white"
                android:includeFontPadding="false"
                android:padding="2dp" />
        </LinearLayout>

        <!-- ✅ 메인 버튼: 고정 너비로 확실한 표시 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="22dp">

            <Button
                android:id="@+id/btnStartTimer"
                android:layout_width="110dp"
                android:layout_height="54dp"
                android:text="@string/btn_start"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnResetTimer"
                android:layout_width="90dp"
                android:layout_height="54dp"
                android:text="@string/btn_reset"
                android:textSize="15sp"
                android:layout_marginStart="10dp" />

            <Button
                android:id="@+id/btnAddTimer"
                android:layout_width="90dp"
                android:layout_height="54dp"
                android:text="@string/btn_add"
                android:textSize="18sp"
                android:layout_marginStart="10dp" />
        </LinearLayout>

        <!-- 알림 모드 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnAlertMode"
                android:layout_width="160dp"
                android:layout_height="48dp"
                android:text="소리"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/extraTimersContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>