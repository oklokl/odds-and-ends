<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/overlayRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:clickable="true"
    android:focusable="true">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/calendarCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="72dp"
        app:cardCornerRadius="18dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="10dp">

        <LinearLayout
            android:id="@+id/calendarSwipeTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvMonthTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2026년 1월"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnToday"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/calendar_today"
                    android:minHeight="40dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    style="@style/MiniCalendar.Weekday"
                    android:text="@string/day_sun" />
                <TextView
                    style="@style/MiniCalendar.Weekday"
                    android:text="@string/day_mon" />
                <TextView
                    style="@style/MiniCalendar.Weekday"
                    android:text="@string/day_tue" />
                <TextView
                    style="@style/MiniCalendar.Weekday"
                    android:text="@string/day_wed" />
                <TextView
                    style="@style/MiniCalendar.Weekday"
                    android:text="@string/day_thu" />
                <TextView
                    style="@style/MiniCalendar.Weekday"
                    android:text="@string/day_fri" />
                <TextView
                    style="@style/MiniCalendar.Weekday"
                    android:text="@string/day_sat" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/weeksContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/calendar_close"
                android:layout_marginTop="14dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
