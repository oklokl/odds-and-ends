<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/timer_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_hour"
                android:textSize="14sp"
                android:layout_marginEnd="42dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_minute"
                android:textSize="14sp"
                android:layout_marginEnd="42dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_second"
                android:textSize="14sp"
                android:layout_marginEnd="42dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_thousandth"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_hhmmss_mmmm"
            android:textSize="41sp"
            android:fontFamily="monospace"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/currentTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 시간 00:00:00.000 오전"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginTop="14dp" />

        <TextView
            android:id="@+id/nextTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next_time_prefix"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginTop="14dp"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="48dp"
            android:minWidth="240dp" />

        <TextView
            android:id="@+id/extraSummaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:visibility="gone" />

        <!-- ✅ 프리셋(드래그로 좌/우 버튼 노출) -->
        <HorizontalScrollView
            android:id="@+id/presetScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/presetContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnPreset5"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:text="@string/preset_5min"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="28sp"
                    android:autoSizeStepGranularity="1sp"
                    android:maxLines="1"
                    android:gravity="center"
                    android:background="@drawable/circle_button"
                    android:textColor="@android:color/white"
                    android:includeFontPadding="false"
                    android:padding="2dp" />

                <Button
                    android:id="@+id/btnPreset10"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:text="@string/preset_10min"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="28sp"
                    android:autoSizeStepGranularity="1sp"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/circle_button"
                    android:textColor="@android:color/white"
                    android:includeFontPadding="false"
                    android:padding="2dp" />

                <Button
                    android:id="@+id/btnPreset15"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:text="@string/preset_15min"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="28sp"
                    android:autoSizeStepGranularity="1sp"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/circle_button"
                    android:textColor="@android:color/white"
                    android:includeFontPadding="false"
                    android:padding="2dp" />

                <Button
                    android:id="@+id/btnPreset30"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:text="@string/preset_30min"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="28sp"
                    android:autoSizeStepGranularity="1sp"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/circle_button"
                    android:textColor="@android:color/white"
                    android:includeFontPadding="false"
                    android:padding="2dp" />

                <Button
                    android:id="@+id/btnPreset40"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:text="@string/preset_40min"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="28sp"
                    android:autoSizeStepGranularity="1sp"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/circle_button"
                    android:textColor="@android:color/white"
                    android:includeFontPadding="false"
                    android:padding="2dp" />

                <Button
                    android:id="@+id/btnPreset50"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:text="@string/preset_50min"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeMaxTextSize="28sp"
                    android:autoSizeStepGranularity="1sp"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/circle_button"
                    android:textColor="@android:color/white"
                    android:includeFontPadding="false"
                    android:padding="2dp" />

            </LinearLayout>
        </HorizontalScrollView>

        <!-- ✅ 메인 버튼: 고정 너비로 확실한 표시 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="22dp">

            <Button
                android:id="@+id/btnStartTimer"
                android:layout_width="110dp"
                android:layout_height="54dp"
                android:text="@string/btn_start"
                android:background="@drawable/pill_button_start"

                android:backgroundTint="@null"
                app:backgroundTint="@null"
                app:backgroundTintMode="src_in"
                android:textColor="@android:color/white"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeStepGranularity="1sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="2dp"
                />

            <Button
                android:id="@+id/btnResetTimer"
                android:layout_width="90dp"
                android:layout_height="54dp"
                android:text="@string/btn_reset"
                android:layout_marginStart="10dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeStepGranularity="1sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="2dp"
                />

            <Button
                android:id="@+id/btnAddTimer"
                android:layout_width="90dp"
                android:layout_height="54dp"
                android:text="@string/btn_add"
                android:layout_marginStart="10dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeStepGranularity="1sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="2dp"
                />
        </LinearLayout>

        <!-- 알림 모드/소리 선택/지속 시간 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnPickTimerSound"
                android:layout_width="110dp"
                android:layout_height="48dp"
                android:text="선택"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeStepGranularity="1sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="2dp"
                android:layout_marginEnd="10dp"
                />

            <Button
                android:id="@+id/btnAlertMode"
                android:layout_width="110dp"
                android:layout_height="48dp"
                android:text="소리"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeStepGranularity="1sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="2dp"
                />

            <Button
                android:id="@+id/btnTimerRingDuration"
                android:layout_width="110dp"
                android:layout_height="48dp"
                android:text="지속"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="18sp"
                android:autoSizeStepGranularity="1sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="2dp"
                android:layout_marginStart="10dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/timerSoundNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:gravity="center"
            android:alpha="0.7"
            android:layout_marginTop="6dp" />

        <LinearLayout
            android:id="@+id/extraTimersContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>