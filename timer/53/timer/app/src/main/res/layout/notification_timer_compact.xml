<?xml version="1.0" encoding="utf-8"?>
<!--
  Compact RemoteViews
  - 우측 액션 버튼 때문에 하단 subtitle(종료 시각)이 잘리는 현상을 줄이기 위해
    1행(타이틀/남은시간 + 버튼), 2행(subtitle 전체폭) 구조로 배치한다.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:minHeight="64dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Row 1: Title/Time (left) + Actions (right) -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/title"
                android:text="@string/label_timer"
                android:textStyle="bold"
                android:textSize="16sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Chronometer
                android:id="@+id/chronometer"
                android:format="%s"
                android:textSize="16sp"
                android:includeFontPadding="false"
                android:paddingStart="8dp"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_toggle"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="6dp"
            android:contentDescription="@string/desc_toggle"
            android:src="@drawable/ic_pause"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/btn_stop"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="6dp"
            android:contentDescription="@string/desc_stop"
            android:src="@drawable/ic_stop" />
    </LinearLayout>

    <!-- Row 2: Subtitle uses full width -->
    <TextView
        android:id="@+id/subtitle"
        android:text=""
        android:textSize="13sp"
        android:alpha="0.75"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
