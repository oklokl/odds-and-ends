<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.krdonon.timer">

    <!-- ▣ 권한 설정 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />

    <!-- ▣ Foreground Service 권한 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />

    <!-- ▣ Doze 예외 요청 -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <!-- ▣ Android 14+ (API 34+) 정확 알람 권한 -->
    <uses-permission
        android:name="android.permission.USE_EXACT_ALARM"
        tools:ignore="ExactAlarm" />

    <!-- ▣ 애플리케이션 정의 -->
    <application
        android:name=".TimerApp"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Timer"
        tools:ignore="DataExtractionRules">

        <!-- 메인 액티비티 -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:resizeableActivity="true"
            android:supportsPictureInPicture="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.krdonon.timer.action.OPEN_TIMER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 알람 풀스크린 액티비티 -->
        <activity
            android:name="com.krdonon.timer.alarm.AlarmActivity"
            android:exported="false"
            android:theme="@style/Theme.Timer"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <!-- 정확 알람 브로드캐스트 수신자 -->
        <receiver
            android:name="com.krdonon.timer.alarm.AlarmReceiver"
            android:enabled="true"
            android:exported="true"
            tools:ignore="ExportedReceiver" />

        <!-- BootReceiver 및 RECEIVE_BOOT_COMPLETED 권한을 제거해
             BOOT_COMPLETED → FGS 경로를 근본 차단했습니다. -->

        <!-- 알람 소리/진동/풀스크린 담당 서비스 -->
        <service
            android:name="com.krdonon.timer.alarm.AlarmService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback"
            android:stopWithTask="false" />

        <!-- 진행중 상태 알림 서비스 -->
        <service
            android:name=".ClockService"
            android:enabled="true"
            android:exported="false"
            android:stopWithTask="false"
            android:foregroundServiceType="mediaPlayback" />

    </application>
</manifest>
