<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.krdonon.timer">

    <!-- 권한 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM"/>
    <!-- USE_EXACT_ALARM 는 토글을 숨길 수 있어 제외(정확알람 토글을 보이게 하려면 SCHEDULE_EXACT_ALARM 만) -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT"/>

    <!-- Foreground Service -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK"/>

    <!-- Doze 예외 요청 인텐트 사용용(사용자 동의 필요) -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS"/>

    <application
        android:name=".TimerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Timer">

        <!-- 메인 액티비티: singleTop 으로 재사용 (알림 눌러도 초기화 방지) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <!-- 알림에서 타이머 탭을 여는 액션 (선택이지만 넣어두면 안전) -->
            <intent-filter>
                <action android:name="com.krdonon.timer.action.OPEN_TIMER"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!-- 알람 울릴 때 표시되는 전체 화면 액티비티 -->
        <activity
            android:name="com.krdonon.timer.alarm.AlarmActivity"
            android:exported="true"
            android:theme="@style/Theme.Timer"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:allowEmbedded="true"/>

        <!-- 정확알람을 받는 리시버 (PendingIntent.getBroadcast 에 대응, exported=true 필수) -->
        <receiver
            android:name="com.krdonon.timer.alarm.AlarmReceiver"
            android:enabled="true"
            android:exported="true"/>
        <!-- 필요 시 BOOT_COMPLETED 재등록도 여기 intent-filter 로 추가 가능 -->

        <!-- 실제 알림(소리/진동/풀스크린) 담당 서비스 -->
        <service
            android:name="com.krdonon.timer.alarm.AlarmService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback"/>

        <!-- 진행중(타이머/스톱워치) 상태 알림 서비스 -->
        <service
            android:name=".ClockService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback"/>
    </application>
</manifest>
