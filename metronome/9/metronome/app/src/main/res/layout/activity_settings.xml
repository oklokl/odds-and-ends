<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:paddingTop="64dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

    <!-- 상단 뒤로가기 영역 -->
    <LinearLayout
        android:id="@+id/backContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/settings_row_background"
        android:clickable="true"
        android:focusable="true">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_media_previous"
            android:tint="@android:color/white"
            android:contentDescription="뒤로" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="뒤로"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- 1. 기존 강박(Strong Beat) 설정 박스 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@drawable/settings_row_background">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강박(Strong Beat)"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="강박 순간에 후러쉬 켜기"
                android:textColor="#B3FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="꺼짐"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp"
                android:layout_marginEnd="4dp" />

            <Switch
                android:id="@+id/switchFlashStrongBeat"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minWidth="64dp"
                android:thumbTint="@android:color/white"
                android:trackTint="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="켜짐"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 2. 사운드 효과 출처 박스 -->
    <LinearLayout
        android:id="@+id/soundEffectContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:background="@drawable/settings_row_background">

        <!-- 타이틀 -->
        <TextView
            android:id="@+id/textSoundEffectTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/sound_effect_source_title"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 스크롤 되는 내용 박스 -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="8dp"
            android:background="@drawable/settings_row_background">

            <TextView
                android:id="@+id/textSoundSources"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>
