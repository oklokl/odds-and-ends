<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- 상단 뒤로가기 영역 : 테두리 박스 전체가 버튼 -->
    <LinearLayout
        android:id="@+id/backContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/settings_row_background"
        android:clickable="true"
        android:focusable="true">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_media_previous"
            android:tint="@android:color/white"
            android:contentDescription="뒤로" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="뒤로"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- 강박 플래시 스위치 행 (전체에 흰색 테두리) -->
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@drawable/settings_row_background">

        <!-- 왼쪽 텍스트 영역 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:text="강박(Strong Beat)"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="강박 순간에 후러쉬 켜기"
                android:textSize="13sp"
                android:textColor="#B3FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- 오른쪽 : 꺼짐 / 스위치 / 켜짐 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="꺼짐"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp"
                android:layout_marginEnd="4dp" />

            <Switch
                android:id="@+id/switchFlashStrongBeat"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minWidth="64dp"
                android:thumbTint="@android:color/white"
                android:trackTint="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="켜짐"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
